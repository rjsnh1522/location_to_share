
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <form action="#" method="">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Share with Friends</h4>
      </div>
      <div class="modal-body">
        <% if @my_friends.present? %>
          <% @my_friends.each do |friend| %>
            <div class="checkbox">
              <label>
                <input type="checkbox" name="friend_ids[]" value="<%= friend.id %>" class ="friend_ids"/><%= friend.try(:username) %>
              </label>
            </div>
          <% end %>
        <% else %>
          <p>No Friends available Please Add friendss</p>
        <% end %>
          <div class="hidden_field_wrapper">
        
          </div>

        
      </div>
      <div class="modal-footer">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="share_public" value="yes" class="public_share">Share as public
            </label>
          </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="share_button">Share</button>

      </div>
      </form>
    </div>

  </div>
